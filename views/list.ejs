<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>글목록 페이지</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script>
    $(document).ready(function () {
        get_detail()
        make_list();
    });

    function get_detail() {
        $.ajax({
            type: "GET",
            url: `blogList`,
            data: {},
            dataType: "json",
            success: function (response) {
                //routes에서 보내준 값 받음. 
                 let blogList = response["blogList"]
               
                 for (let i = 0; i < blogList.length; i++) {
                     let date = moment(blogList[i]['borderDate']).format('YYYY-MM-DD HH:mm')
                     make_list(blogList[i], date)
                 }
            }
        })
    }
    function make_list(blog, date) {
        let htmlTemp = `<tr>
                            <td><a href='list_Detail?borderDate=${blog["borderDate"]}'>${blog["subject"]}</a></td>
                            <td>${blog["nick"]}</td>
                            <td>${date}</td>
                        </tr>`
        $("#list-box").append(htmlTemp)
    }
</script>
<body>
    <div id="list-box" name="list-box">
        <h1>글목록 페이지</h1>
        <button onClick="location.href='/user/login'">로그인</button> 
   
    </div>
</body>
</html>

